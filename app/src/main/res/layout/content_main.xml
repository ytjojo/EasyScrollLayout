<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.ytjojo.easyscrolllayout.demo.MainActivity"
    tools:showIn="@layout/activity_main"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_webview"
        android:padding="10dp"
        android:text="webVeiw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_viewpager"
        android:padding="10dp"
        android:text="viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_viewpagerh"
        android:padding="10dp"
        android:text="viewpagerhorizonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_topbanner"
        android:padding="10dp"
        android:text="topbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_recylerview_viewpagerheader"
        android:padding="10dp"
        android:text="recylerviewviewpagerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  </LinearLayout>

</LinearLayout>
