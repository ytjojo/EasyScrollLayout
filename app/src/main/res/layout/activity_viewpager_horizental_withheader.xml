<?xml version="1.0" encoding="utf-8"?>
<com.github.ytjojo.easyscrolllayout.EasyScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:id="@+id/StickyNavLayout"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:orientation="vertical"
                                                     app:isDrawerLayoutStyle="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        app:easylayout_layoutGravity="innertop"
        app:parallaxMultiplier="0.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/example"/>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="header"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:parallaxMultiplier="0.5"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#003ef0"
        android:gravity="center"
        android:orientation="vertical"
        app:easylayout_layoutGravity="outright">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="outRightView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#00ee00"
        android:gravity="center"
        android:orientation="vertical"
        app:easylayout_layoutGravity="outleft">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="outLeftView"/>
    </LinearLayout>
</com.github.ytjojo.easyscrolllayout.EasyScrollLayout>