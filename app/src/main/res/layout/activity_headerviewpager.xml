<?xml version="1.0" encoding="utf-8"?>
<com.github.ytjojo.easyscrolllayout.EasyScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/StickyNavLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        app:parallaxMultiplier="0.5"
        android:layout_width="200dp"
        android:gravity="center"
        android:background="#003ef0"
        app:easylayout_layoutGravity="outright"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:text="outRightView"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        app:parallaxMultiplier="0.5"
        android:layout_width="200dp"
        android:gravity="center"
        android:background="#00ee00"
        app:easylayout_layoutGravity="outleft"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:text="outLeftView"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        app:parallaxMultiplier="0.5"
        app:easylayout_layoutGravity="innertop"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/banner_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.shizhefei.view.indicator.FixedIndicatorView
            android:id="@+id/banner_indicator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="right|bottom" />
    </FrameLayout>
    <com.github.ytjojo.easyscrolllayout.ContentWraperView
        android:background="#FF0000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </com.github.ytjojo.easyscrolllayout.ContentWraperView>


</com.github.ytjojo.easyscrolllayout.EasyScrollLayout>