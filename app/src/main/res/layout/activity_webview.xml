<?xml version="1.0" encoding="utf-8"?>
<com.github.ytjojo.easyscrolllayout.EasyScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        app:easylayout_layoutGravity="innertop">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="header" />
    </LinearLayout>

    <com.github.ytjojo.easyscrolllayout.ContentWraperView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#00ffee"
            app:contentwrper_layoutGravity="innerbottom"
            android:layout_height="300dp">
            <TextView
                android:text="bottomView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#eeff00"
            app:contentwrper_layoutGravity="outbottom"
            android:layout_height="100dp">
            <TextView
                android:text="bottomView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#00ee00"
            android:gravity="center"
            android:orientation="vertical"
            app:contentwrper_layoutGravity="outtop">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="outTopView" />
        </LinearLayout>
    </com.github.ytjojo.easyscrolllayout.ContentWraperView>
</com.github.ytjojo.easyscrolllayout.EasyScrollLayout>